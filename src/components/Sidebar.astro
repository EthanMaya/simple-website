---
const { selectedItem } = Astro.props;
---

<aside
  data-animation="default"
  data-collapse="medium"
  data-duration="400"
  data-easing="ease"
  data-easing2="ease"
  role="banner"
  class="sidebar w-nav"
>
  <div class="nav-content">
    <a href="/" class="w-nav-brand" aria-label="home">
      <div>
          <div class="label-white">Ethan Maya</div>
          <div class="label-gray">Software Engineer</div>
        </div>
      
    </a>
    <div class="niv-data">
      <a href="mailto:ethan&#109;ay&#101;&#109;ail&#64;gmail.com" class="projects-container">
        <img
          src="/assets/email-envelope-line-white-icon.svg"
          loading="eager"
          alt="Mail Logo"
          class="niv-image"
        />
      </a>
      <a href="https://github.com/EthanMaya" target="_blank" rel="noopener noreferrer" class="projects-container">
        <img
          src="/assets/github-mark-white.svg"
          loading="eager"
          alt="Gihub Logo"
          class="niv-image"
        />
      </a>
      <!-- 
         <a href="https://github.com/EthanMaya" target="_blank" rel="noopener noreferrer" class="projects-container">
        <img
          src="/assets/discord-white-icon.svg"
          loading="eager"
          alt="Discord Logo"
          class="niv-image"
        />
      </a>
      
      -->
   
      
        
      </div>

    <nav role="navigation" class="w-nav-menu">
      <a
        href="/"
        class={`nav-link-container w-inline-block ${
          selectedItem === 'home' ? 'w--current' : ''
        }`}
      >
        <img
          src="/assets/home.svg"
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>Home</div>
      </a>
      <a
        href="/computer-science"
        class={`nav-link-container w-inline-block ${
          selectedItem === 'computer-science' ? 'w--current' : ''
        }`
        }
      >
        <img
          src="/assets/computer-956.svg"
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>Computer Science</div>
      </a>
      <a
        href="/things-ive-done"
        class={`nav-link-container w-inline-block ${
          selectedItem === 'things-ive-done' ? 'w--current' : ''
        }`}
      >
        <img
          src="/assets/dns.svg"
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>Things I've Done</div>
      </a>
      <a
        href="/achievements"
        class={`nav-link-container w-inline-block ${
          selectedItem === 'achievements' ? 'w--current' : ''
        }`}
      >
        <img
          src="/assets/achievement.svg"
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>Achievements</div>
      </a>
      <a
        href="/about"
        class={`nav-link-container w-inline-block ${
          selectedItem === 'about' ? 'w--current' : ''
        }`}
      >
        <img
          src="/assets/account-white-icon.svg"
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>About</div>
      </a>
      <a
        href="/contact"
        class={`nav-link-container w-inline-block ${
          selectedItem === 'contact' ? 'w--current' : ''
        }`}
      >
        <img
          src="/assets/round-information-outline-white-icon.svg"
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>Contact Details</div>
      </a>
    </nav>

    <div
      class="navbar-icon-button w-nav-button"
      style="-webkit-user-select: text;"
      aria-label="menu"
      role="button"
      tabindex="0"
    >
      <img
        src="/assets/menu.svg"
        loading="eager"
        alt=""
        class="navbar-icon"
      />
    </div>
    
    
  </div>

  <script>
    import { setupNav } from '../scripts/nav.js';
    
    let cleanup;
    document.addEventListener('astro:page-load', () => {
      if (cleanup) cleanup();
      cleanup = setupNav();
    });

    document.addEventListener('astro:before-swap', () => {
      if (cleanup) cleanup();
    });
  </script>
</aside>
